@require './_colour.styl'

btn-style(c1, c2)
  background-color c2
  background-image -webkit-linear-gradient(260deg, c1 0%, c2 91%)
  background-image linear-gradient(-180deg, c1 0%, c2 91%)
  box-shadow 0 0.18rem 0.11rem -0.186rem darken(c2, 62%)


$basic-text-colour = #3d4448
a.button,
button.button,
input[type="submit"].button
  outline 0
  margin 0
  color $basic-text-colour
  font-weight 300
  background-position 0 -0.08em
  background-repeat repeat-x
  padding 0.31rem 0.88rem
  font-size 0.82em
  line-height 1.37em
  display inline-block
  border-radius 0.16em
  opacity 0.94
  border 1px solid rgba(27, 31, 35, 0.2)
  btn-style(#fbfbfc, $basic-colour)
  &.flat
    color darken($basic-text-colour, 46%)
    box-shadow 0 0.18rem 0.11rem -0.186rem darken($line-colour, 72%)
    &.disabled
      box-shadow 0 0.22rem 0.11rem -0.22em darken($line-colour, 72%)
  &:hover,
  &.flat:hover
    cursor pointer
    color darken($basic-text-colour, 46%)
    border 1px solid rgba(13, 31, 35, 0.35)
    text-decoration none

$primary-text-colour = rgba(91, 105, 142, 0.92)
a.primary.button,
button.primary.button,
input[type="submit"].primary.button
  border-color darken($primary-colour, 14%)
  color $primary-text-colour
  btn-style(#f0f3f6, $primary-colour)
  &:hover
    border-color darken($primary-colour, 21%)
    color darken($primary-text-colour, 36%)
    btn-style(#f0f3f6, #e2eaf4)
  &.flat
    color darken($primary-colour, 58%)
    box-shadow 0 0.18rem 0.11rem -0.186rem darken($primary-colour, 62%)
    &.disabled
      box-shadow 0 0.22rem 0.11rem -0.22em darken($primary-colour, 62%)

$secondary-text-colour = rgba(84, 85, 87, 0.86)
a.secondary.button,
button.secondary.button,
input[type="submit"].secondary.button
  border 1px solid darken($secondary-colour, 18%)
  color $secondary-text-colour
  btn-style(#e9edf0, darken($secondary-colour, 3%))
  &:hover
    border 1px solid darken($secondary-colour, 26%)
    color darken($secondary-text-colour, 22%)
    btn-style(#e4e9ec, #d4dadd)
  &.flat
    color darken($secondary-colour, 58%)
    box-shadow 0 0.18rem 0.11rem -0.186rem darken($secondary-colour, 62%)
    &.disabled
      box-shadow 0 0.22rem 0.11rem -0.22em darken($secondary-colour, 62%)

$negative-text-colour = rgba(140, 51, 51, 0.88)
a.negative.button,
button.negative.button,
input[type="submit"].negative.button
  border 1px solid lighten($negative-text-colour, 51%)
  color darken($negative-text-colour, 3%)
  btn-style(lighten($negative-colour, 33%), $negative-colour)
  &:hover
    border 1px solid lighten($negative-text-colour, 29%)
    color darken($negative-text-colour, 18%)
    btn-style(lighten($negative-colour, 41%), darken($negative-colour, 3%))
  &.flat
    color darken($negative-colour, 55%)
    box-shadow 0 0.18rem 0.11rem -0.186rem darken($negative-colour, 62%)
    &.disabled
      box-shadow 0 0.22rem 0.11rem -0.22em darken($negative-colour, 62%)

$positive-text-colour = rgba(122, 153, 108, 0.88)
a.positive.button,
button.positive.button,
input[type="submit"].positive.button
  border 1px solid darken($positive-text-colour, 2%)
  color darken($positive-text-colour, 38%)
  btn-style(lighten($positive-colour, 16%), $positive-colour)
  &:hover
    border 1px solid darken($positive-text-colour, 8%)
    color darken($positive-text-colour, 46%)
    btn-style(lighten($positive-colour, 28%), darken($positive-colour, 5%))
  &.flat
    color darken($positive-text-colour, 42%)
    box-shadow 0 0.18rem 0.11rem -0.186rem darken($positive-colour, 62%)
    &.disabled
      box-shadow 0 0.22rem 0.11rem -0.22em darken($positive-colour, 62%)

a.flat.button,
button.flat.button,
input[type="submit"].flat.button
  background-image none
  background none
  &:hover
    background-image none
    background none

a.button.disabled,
button.button.disabled,
input[type="submit"].button.disabled
  opacity 0.47
  pointer-events none
  cursor not-allowed
