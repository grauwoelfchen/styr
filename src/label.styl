@require './_colour.styl'

lbl-style(c)
  background-position 0 -0.08em
  background-repeat repeat-x
  background-color c
  box-shadow none

label:not([for]).label,
span.label
  display inline-block
  margin 0
  color #3d4448
  font-weight 100
  padding 0.26rem 0.46rem
  font-size 0.78em
  line-height 1.14em
  border-radius 0.133em
  opacity 0.9
  lbl-style($basic-colour)
  &.lined
    border 1px solid darken($basic-colour, 6%)
    background-image none
    background none
  &.rounded
    border-radius 0.83em
    padding-left 0.62rem
    padding-right 0.62rem

label:not([for]).primary.label,
span.primary.label
  color rgba(91, 105, 142, 0.79)
  lbl-style($primary-colour)
  &.lined
    background-image none
    background none
    color darken($primary-colour, 58%)
    border 1px solid rgba(27, 31, 35, 0.2)

label:not([for]).secondary.label,
span.secondary.label
  color rgba(84, 85, 87, 0.86)
  lbl-style($secondary-colour)
  &.lined
    background-image none
    background none
    color darken($secondary-colour, 58%)
    border 1px solid rgba(182, 186, 183, 0.89)

label:not([for]).negative.label,
span.negative.label
  color rgba(140, 51, 51, 0.88)
  lbl-style($negative-colour)
  &.lined
    background-image none
    background none
    color darken($negative-colour, 58%)
    border 1px solid rgba(194, 128, 128, 0.68)

label:not([for]).positive.label,
span.positive.label
  color rgba(41, 84, 60, 0.88)
  lbl-style($positive-colour)
  &.lined
    background-image none
    background none
    color darken($positive-colour, 62%)
    border 1px solid rgba(105, 165, 113, 0.76)
