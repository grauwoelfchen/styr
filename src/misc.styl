@require './_colour.styl'

// selection
*::selection
  background lighten($black2, 11%)
  color $gray0

*::-moz-selection
  background lighten($black2, 11%)
  color $gray0

// link
a
  color $link-colour
  text-decoration none
  &:hover
    color lighten($link-colour, 26%)
  &:visited
    color $link-visited-colour
  &:visited:hover
    color lighten($link-visited-colour, 38%)
  &:hover
  &:visited:hover
    text-decoration underline

// list
ul
  margin 0.182rem 0 0.096rem 0
  padding 0 0 0 0.898rem
  li
    margin 0
    padding 0.011rem 0 0.011rem 0.29rem


// line
hr
  height 0
  border none
  border-bottom 1px solid lighten($line-colour, 44%)
  display block
  margin 0 0.786rem

// breadcrumb
div.breadcrumb,
ul.breadcrumb
  display inline-block
  span.divider,
  div.divider,
  li.divider
    display inline-block
    font-size 0.776em
    padding 0
    margin 0 0.066em
    color $gray1
  a.item,
  span.item,
  div.item,
  li.item
    display inline-block
    font-size 0.886em
    margin 0
    padding 0
    &.active
      pointer-events none
      cursor default
      font-weight bold
      color $black0
      &:hover
        color $black0
        text-decoration none

/* pre,code */
pre
  background darken($gray0, 3%)
  padding 0.619rem 1.02rem
  color $black0
  &.inverted
    background lighten($black2, 11%)
    color darken($white2, 18%)

pre.inverted::selection
    color lighten($black2, 11%)
    background $white1

pre.inverted::-moz-selection
    color lighten($black2, 11%)
    background lighten($white1, 3%)

code
  display inline-block
  vertical-align baseline
  line-height 1.16em
  margin 0.03rem 0.19rem
  padding 0.03rem 0.56rem 0.075rem 0.56rem
  border 1px solid lighten($gray1, 55%)
  border-radius 0.088rem
  color darken($gray2, 58%)
  &.inverted
    border 1px solid lighten($black2, 11%)
    background lighten($black2, 11%)
    color darken($white2, 18%)

blockquote.blockquote
  display block
  line-height 1.21em
  border-left 4px solid darken($gray1, 19%)
  padding 0.62rem 1.03rem 0.56rem 1.03rem
  margin 0.36rem 0

/* general */
.block
  display block
  margin 0.33rem

.right
  text-align right
