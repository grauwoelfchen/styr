@require './_variable.styl'

.grid
  display block
  width 100%

  .row
    display inline-block
    width 100%

/**
 * NOTE:
 *   offset-N works only range in media queries
 */

for k, v in cols
  .column-{k}
    width unquote(v)
    display inline-block
    box-sizing border-box
    float left
    padding 0.6rem
  .offset-{k}
    margin-left unquote(v)

@media only screen and (max-width: 1280px)
  /* v(ast|ery large) size */
  [class*="column-v-"][class*="offset-"]
    margin-left unset
  [class*="column-"]
    padding 0.6rem 0.5rem
  for k, v in cols
    .column-v-{k},
    .column-v-{k}[class*="column-"]
      width unquote(v)
    .row .offset-v-{k}
      margin-left unquote(v)

